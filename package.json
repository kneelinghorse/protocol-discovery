{
  "name": "oss-protocols",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Protocol-Driven Discovery tooling and missions",
  "bin": {
    "protocol-discover": "./cli/index.cjs",
    "protocol-generate": "./app/cli/generate-cli.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint . --ext .js,.mjs,.cjs --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cli": "node ./cli/scaffold-only.mjs"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.0.3",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "light-my-request": "^6.6.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fs-extra": "^11.3.2",
    "graphology": "^0.26.0",
    "graphology-traversal": "^0.3.1",
    "inquirer": "^12.9.6",
    "ora": "^7.0.1",
    "pg": "^8.16.3"
  }
  ,
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "cli/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
